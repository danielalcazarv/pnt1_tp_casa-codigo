@model casa_codigo_cursos.Models.Curso

@{
    ViewData["Title"] = "Details";
}

<h1 class="mb-3">@Html.DisplayFor(model => model.Titulo)</h1>

<div class="banner-curso mb-4">
    <img src="@Model.ImagenUrl" alt="Imagen del curso" style="width:100%; height:250px; object-fit:cover; border-radius:8px;" />
</div>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Precio)
        </dt>
        <dd class = "col-sm-10">
            $@Model.Precio
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Duracion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Duracion) minutos
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-secondary" asp-action="Index">Ver Todos</a>
    <form asp-controller="Inscripciones" asp-action="Inscribirse" method="post" style="display:inline">
        <input type="hidden" name="cursoId" value="@Model.CursoId" />
        <button type="submit" class="btn btn-primary">Inscribirse</button>
    </form>
</div>
