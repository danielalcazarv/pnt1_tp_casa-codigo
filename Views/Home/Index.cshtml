@model IEnumerable<casa_codigo_cursos.Models.Curso>

@{
    ViewData["Title"] = "Página de Inicio";
}

<div class="p-5 mb-4 bg-light rounded-3 text-center">
    <div class="container-fluid py-5">
        <h1 class="display-5 fw-bold">Bienvenido a tu Plataforma de Cursos Online 🎓</h1>
        <p class="fs-4 col-md-8 mx-auto">
            Explora nuestro catálogo de cursos y talleres diseñados por expertos. Aprende nuevas habilidades a tu propio ritmo, desde cualquier lugar.
        </p>
        <a class="btn btn-primary btn-lg" asp-controller="Cursos" asp-action="Index">Ver todos los cursos</a>
    </div>
</div>

<div class="container my-5">
    <h1 class="text-center mb-4">Cursos Destacados</h1>

    <div class="row">
        @foreach (var curso in Model)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="@curso.ImagenUrl" class="card-img-top" alt="Imagen del curso @curso.Titulo" style="height: 200px; object-fit: cover;">

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@curso.Titulo</h5>

                        <p class="card-text">
                            @if (curso.Descripcion.Length > 100)
                            {
                                @(curso.Descripcion.Substring(0, 100) + "...")
                            }
                            else
                            {
                                @curso.Descripcion
                            }
                        </p>

                        <ul class="list-group list-group-flush mt-auto">
                            <li class="list-group-item">
                                <strong>Precio:</strong> @curso.Precio.ToString("C")
                            </li>
                            <li class="list-group-item">
                                <strong>Duración:</strong> @curso.Duracion minutos
                            </li>
                        </ul>
                    </div>

                    <div class="card-footer bg-transparent border-top-0">
                        <div class="d-grid gap-2">
                            <a href="@Url.Action("Details", "Cursos", new { id = curso.CursoId })" class="btn btn-primary">
                                Ver más detalles
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

